<div class="sidebar flash-fix" id="sidebar">

	<div class="game-info" id="game-info">
		<p class="label">Current Game</p>
		<h2>[[gameData.game.name]]</h2>
	</div>

	<div class="upper" v-bind:style="{ left: -270 * panelSelected + 'px' }">
		<div class="leaderboard panel tse-scrollable">
			<div class="tse-content">
				<h3>Player Score <%- include('svg/clipboard-2.svg') %></h3>
				<ul id="scores">
					<%// Scoreboard is done in jquery %>
				</ul>
			</div>
		</div>

		<div class="game-setup panel tse-scrollable">
			<div class="tse-content">
				<h3>Game Info <%- include('svg/mixer.svg') %></h3>
				<ul class="ui-options">
					<li v-for="value in gameInfo" class="opt"> [[$key]]:
						<!-- <span v-if="typeof value == 'boolean'" class="checkbox" v-bind:class="{ checked: value }" ></span>%> -->
						<!-- <span v-else>[[value]]</span> -->
						<span>[[value]]</span>
					</li>
				</ul>
			</div>
		</div>

		<div class="chat panel">
			<h3 style="margin-top: 30px;">Player Chat <%- include('svg/speech-bubble-right-2.svg') %></h3>
		</div>
	</div>

	<div class="controls">
		<ul class="inline">
			<li><a v-bind:class="{ active: panelSelected == 0 }" @click="selectPanel(0, $event)">Score</a></li>
			<li><a v-bind:class="{ active: panelSelected == 1 }" @click="selectPanel(1, $event)">Info</a></li>
			<li><a v-bind:class="{ active: panelSelected == 2 }" @click="selectPanel(2, $event)">Chat</a></li>
		</ul>
		<div class="marker" v-bind:style="{ width: markerWidth + 'px', left: markerLeft + 'px' }"></div>
	</div>

</div>
