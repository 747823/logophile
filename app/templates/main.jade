include ./parts/header.jade
title Logophile
meta( name="description", content="Logophile is a fast-paced word finding game similar to boggle." )
include ./parts/assets.jade

!= "</head>"
script

body
	include ./parts/popup.jade
	include ./parts/playercard.jade
	//- include ./parts/logo-small.jade
	//- include ./parts/logo-small-white.jade
	include ./parts/share.jade

	div( id="mainpage" )

		div( class="menu" v-bind:class="{ 'open' : !!openScreen }" )
			div( class="inner" )

				div
					div( class="board" )
						div( class="row" v-bind:style="{ height: 100/gameData.game.board.length+'%' }" v-for="x in gameData.game.board" )
							div( v-bind:class="{ 'cell': true, 'on': this.boardHighlighted[$parent.$index][$index].highlight == 'on', 'partial': this.boardHighlighted[$parent.$index][$index].highlight == 'partial' }" v-bind:style="{ width: 100/gameData.game.board.length+'%' }" v-for="y in gameData.game.board[$index]" track-by="$index" )
								div( class="letter" style="font-size: 30px; font-weight: 200;" ).
									[[ gameData.game.board[$parent.$index][$index].letter ]]

					h2 Play custom online boggle games with other people, completely free!
					p 
						| <span class="logophile">Logophile</span> is a multiplayer word game inspired by boggle that can be played in desktop and mobile browsers. Invite friends or play by yourself. Customize the board settings to create the type of game you want to play, or join an existing one!

				ul( class="options inline" )
					li
						a( href="#" class="disabled" title="Currently Unavailable" v-bind:class="{ 'active' : openScreen == 'gameList' }" ) Join Game
					li
						a( href="#" v-on:click="createGamePopup()" v-bind:class="{ 'active' : openScreen == 'createNew' }" ) Create New Game
					li
						a( href="#" class="disabled" title="Currently Unavailable" v-bind:class="{ 'active' : openScreen == 'howToPlay' }" ) How to Play



!= "</html>"