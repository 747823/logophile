div( class="sidebar flash-fix" id="sidebar" v-bind:class="{ expanded: show }" )

	div( class="game-info" id="game-info" )
		p( class="label" ) Current Game
		h2 [[gameData.game.name]]

	div( class="upper" v-bind:style="{ left: -270 * panelSelected + 'px' }" )

		div( class="leaderboard panel tse-scrollable" )
			div( class="tse-content" )
				h3 Player Score !{locals.svg["clipboard-2.svg"]} 
				ul( id="scores" )
					//- Scoreboard is done in jquery

		div( class="game-setup panel tse-scrollable" )
			div( class="tse-content" )
				h3 Game Info !{locals.svg["mixer.svg"]}
				ul( class="ui-options" )
					li( v-for="value in gameInfo" class="opt" ) [[$key]]: 
						//- span( v-if=" typeof value == 'boolean' " class="checkbox" v-bind:class="{ checked: value }" )
						//- span( v-else ) [[value]]
						span [[value]]

		div( class="chat panel" )
				h3( style="margin-top: 30px;" ) Player Chat !{locals.svg["speech-bubble-right-2.svg"]}

	div( class="controls" )
		ul( class="inline" )
			li
				a( v-bind:class="{ active: panelSelected == 0 }" @click="selectPanel(0, $event)" ) Score
			li
				a( v-bind:class="{ active: panelSelected == 1 }" @click="selectPanel(1, $event)" ) Info
			li
				a( v-bind:class="{ active: panelSelected == 2 }" @click="selectPanel(2, $event)" ) Chat

		div( class="marker" v-bind:style="{ width: markerWidth + 'px', left: markerLeft + 'px' }" )
