div( class="sidebar" id="sidebar" )
	div( class="upper" )

		div( class="leaderboard panel" v-on:mouseover="freezeBoard($event)" v-on:mouseout="unfreezeBoard($event)" )
			h3 Scoreboard !{locals.svg["clipboard-2.svg"]} 
			ul
				//- We need to figure out how to make sure this is sorted by the user scores, not just their position in the array
				li( v-for="user in playersSorted" v-bind:class="{ 'me': user.name == userData.name }" ) [[$index+1]]. [[user.name]]
					span [[user.score]]
				//- li 2. Mu Te
					span 215
				//- li( class="me" ) 3. Cosine Pi
					span 59

		div( class="game-setup panel" )
			h3 Game Info !{locals.svg["mixer.svg"]}

		div( class="chat panel" )
			h3 Game Info !{locals.svg["speech-bubble-right-2.svg"]}

	div( class="controls" )
		ul( class="inline" )
			li
				a( v-bind:class="{ active: true }" ) Score
			li
				a( v-bind:class="{ active: false }" ) Info
			li
				a( v-bind:class="{ active: false }" ) Chat
		div( class="marker" )
